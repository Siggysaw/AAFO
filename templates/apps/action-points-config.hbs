<form>
    {{#if isCharacter}}

    <div class="ap-field form-group">
        <input type="number" class="number-lg" name="ap.max" value="{{source.max}}"
               placeholder="{{ap.max}}" data-tooltip="AAFO.ActionPointsOverride">
    </div>

    <div class="form-group">
        <label>{{localize "AAFO.ActionPointsBonusLevel"}}</label>
        <input type="text" name="ap.bonuses.level" value="{{ap.bonuses.level}}">
    </div>
    <div class="form-group">
        <label>{{localize "AAFO.ActionPointsBonusOverall"}}</label>
        <input type="text" name="ap.bonuses.overall" value="{{ap.bonuses.overall}}">
    </div>

    {{else}}

    <div class="ap-field form-group">
        <input type="number" class="number-lg" name="ap.max" value="{{ source.max }}" data-tooltip="AAFO.ActionPointsMax">
    </div>

    <div class="form-group">
        <label>{{localize "AAFO.SPFormula"}}</label>
        <div class="form-fields">
            <input type="text" name="ap.formula" value="{{ap.formula}}">
            <button class="roll-hit-points"><i class="fas fa-dice"></i> {{localize "AAFO.Roll"}}</button>
        </div>
    </div>

    {{/if}}

    <hr>

    <div class="form-group">
        <label>{{localize "AAFO.ActionPointsTempMaxShort"}}</label>
        <div class="form-fields">
            <input type="number" name="ap.tempmax" value="{{source.tempmax}}">
        </div>
    </div>

    <button type="submit">
        <i class="far fa-save"></i> {{localize "Save"}}
    </button>
</form>
