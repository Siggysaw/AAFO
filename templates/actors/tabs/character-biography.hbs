{{#*inline "textbox"}}
    <div class="textbox-half">
        <h3 class="icon">
            {{#if icon}}<i class="{{ icon }}"></i>
            {{~else if svg}}<aafo-icon src="systems/aafo/icons/svg/{{svg}}.svg"></aafo-icon>{{/if}}
            <span class="roboto-upper">{{ localize label }}</span>
        </h3>
        {{#if @root.editable}}
        <textarea class="untext" name="{{ name }}">{{ value }}</textarea>
        {{else}}
        <p>{{ aafo-textFormat value }}</p>
        {{/if}}
    </div>
{{/inline}}

<div class="tab biography" data-group="primary" data-tab="biography">

    {{!-- Characteristics --}}
    <div class="top">
        <ul class="unlist characteristics">
            {{#each characteristics}}
            <li>
                <label>
                    <span class="roboto-upper label">{{ localize label }}</span>
                    {{#if @root.editable}}
                    <input type="text" name="{{ name }}" value="{{ value }}">
                    {{else}}
                    <span class="value">{{ value }}</span>
                    {{/if}}
                </label>
            </li>
            {{/each}}
        </ul>
    </div>

    {{!-- Ideals, Bonds, Flaws, Personality Traits, & Appearance --}}
    <div class="middle flexrow">
        <div class="left">
            {{~> "textbox" name="system.details.ideal" value=system.details.ideal label="AAFO.Ideals"
                icon="fas fa-seedling" ~}}
            {{~> "textbox" name="system.details.bond" value=system.details.bond label="AAFO.Bonds"
                icon="fas fa-link" ~}}
            {{~> "textbox" name="system.details.flaw" value=system.details.flaw label="AAFO.Flaws"
                icon="fas fa-heart-crack" ~}}
        </div>
        <div class="right">
            {{~> "textbox" name="system.details.trait" value=system.details.trait label="AAFO.PersonalityTraits"
                icon="fas fa-puzzle-piece" ~}}
            {{~> "textbox" name="system.details.appearance" value=system.details.appearance label="AAFO.Appearance"
                icon="fas fa-image-portrait" ~}}
        </div>
    </div>

    {{!-- Biography --}}
    <div class="bottom">
        <h3 class="icon">
            <i class="fas fa-feather"></i>
            <aafo-icon src="systems/aafo/icons/svg/ink-pot.svg"></aafo-icon>
            <span class="roboto-upper">{{ localize "AAFO.Biography" }}</span>
        </h3>
        {{ editor biographyHTML target="system.details.biography.value" button=false editable=@root.editable
                  engine="prosemirror" collaborate=false }}
    </div>

</div>
